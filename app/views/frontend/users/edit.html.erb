<%= user_submenu_tag %>
<div id="right">
  <%= form_for @user, :html => { :multipart => true } do |f| %>
  <%= render "frontend/commons/error_messages", :target => @user %>
  <fieldset class="form-generic form-signup">
    <legend>修改个人信息</legend>
    <ul>
      <li>
        <label><span>*</span>账号：</label><%= @user.account %>
      </li>
      <li>
        <label><span>*</span>中文名：</label><%= f.text_field :chinese_name, :class => 'text-field' %><span>请输入您的真实姓名</span>
      </li>
      <li>
        <label>外文名：</label><%= f.text_field :foreign_name, :class => 'text-field' %>
      </li>
      <li>
        <label><span>*</span>性别：</label><%= f.radio_button :gender, 1 %>男 <%= f.radio_button :gender, 2 %>女
      </li>
      <li>
        <label><span>*</span>国籍：</label><%= f.collection_select :country_id, Country.alphabetic, :id, :name_with_initial %>
      </li>
      <li>
        <label>联系地址：</label><%= f.text_field :address, :class => 'text-field' %>
      </li>
      <li>
        <label>邮政编码：</label><%= f.text_field :postal_code, :class => 'text-field' %>
      </li>
      <li>
        <label><span>*</span>座机：</label><%= f.text_field :phone_number, :class => 'text-field' %><span>请按以下格式输入：区号-电话号码-分机</span>
      </li>
      <li>
        <label><span>*</span>手机：</label><%= f.text_field :mobile_number, :class => 'text-field' %>
      </li>
      <li>
        <label>传真：</label><%= f.text_field :fax_number, :class => 'text-field' %>
      </li>
      <li>
        <label><span>*</span>电子邮件：</label><%= f.text_field :email, :class => 'text-field' %><span>请输入正确的电子邮件地址</span>
      </li>
      <li>
        <label><span>*</span>工作单位：</label><%= f.text_field :organization, :class => 'text-field' %>
      </li>
      <li>
        <label>职称：</label><%= f.text_field :professional_title, :class => 'text-field' %>
      </li>
      <li>
        <label>职位：</label><%= f.text_field :position, :class => 'text-field' %>
      </li>
      <li>
        <label>世汉学会会员：</label><%= f.radio_button :is_member, true %>是 <%= f.radio_button :is_member, false %>否
      </li>
    </ul>
  </fieldset>
  <% end %>
  <div class="action-generic">
    <%= link_to '更新个人信息', '#', :onclick => "submitForm('edit_user_#{@user.id}')", :class => 'button' %>
  </div>
</div>
<div class="cb"></div>
