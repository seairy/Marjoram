<%= form_for @user, :html => { :multipart => true } do |f| %>
<%= hidden_field_tag :staff, 'true' if params[:staff] == 'true' %>
<%= render "frontend/commons/error_messages", :target => @user %>
<fieldset class="form-generic">
</fieldset>
<fieldset class="form-generic">
  <legend>参会代表个人信息</legend>
  <ul>
    <li>
      <label><span>*</span>账号：</label><%= f.text_field :account, :class => 'text-field' %><span>请输入英文、数字及下划线，并保持长度为5至16位</span>
    </li>
    <li>
      <label><span>*</span>密码：</label><%= f.password_field :password, :class => 'text-field' %><span>请输入英文、数字及下划线，并保持长度为6至16位</span>
    </li>
    <li>
      <label><span>*</span>密码确认：</label><%= f.password_field :password_confirmation, :class => 'text-field' %><span>请重新输入密码</span>
    </li>
    <li>
      <label><span>*</span>中文名：</label><%= f.text_field :chinese_name, :class => 'text-field' %><span>请输入您的真实姓名</span>
    </li>
    <li>
      <label>外文名：</label><%= f.text_field :foreign_name, :class => 'text-field' %>
    </li>
    <li>
      <label><span>*</span>性别：</label><%= f.radio_button :gender, 1 %>男 <%= f.radio_button :gender, 2 %>女
    </li>
    <li>
      <label><span>*</span>国籍：</label><%= f.collection_select :country_id, Country.alphabetic, :id, :name_with_initial %>
    </li>
    <li>
      <label>联系地址：</label><%= f.text_field :address, :class => 'text-field' %>
    </li>
    <li>
      <label>邮政编码：</label><%= f.text_field :postal_code, :class => 'text-field' %>
    </li>
    <li>
      <label><span>*</span>座机：</label><%= f.text_field :phone_number, :class => 'text-field' %><span>请按以下格式输入：区号-电话号码-分机</span>
    </li>
    <li>
      <label><span>*</span>手机：</label><%= f.text_field :mobile_number, :class => 'text-field' %>
    </li>
    <li>
      <label>传真：</label><%= f.text_field :fax_number, :class => 'text-field' %>
    </li>
    <li>
      <label><span>*</span>电子邮件：</label><%= f.text_field :email, :class => 'text-field' %><span>请输入正确的电子邮件地址</span>
    </li>
    <li>
      <label><span>*</span>工作单位：</label><%= f.text_field :organization, :class => 'text-field' %>
    </li>
    <li>
      <label>职称：</label><%= f.text_field :professional_title, :class => 'text-field' %>
    </li>
    <li>
      <label>职位：</label><%= f.text_field :position, :class => 'text-field' %>
    </li>
    <li>
      <label>世汉学会会员：</label><%= f.radio_button :is_member, 1 %>是 <%= f.radio_button :is_member, 0, checked: true %>否
    </li>
  </ul>
</fieldset>
<fieldset class="form-generic">
  <legend>论文信息</legend>
  <ul>
    <li>
      <label><span>*</span>题目：</label><%= f.text_field :subject, :class => 'text-field' %>
    </li>
    <li>
      <label><span>*</span>第一作者：</label><%= f.text_field :first_author, :class => 'text-field' %>
    </li>
    <li>
      <label>第二作者：</label><%= f.text_field :second_author, :class => 'text-field' %>
    </li>
    <li>
      <label><span>*</span>关键词：</label><%= f.text_field :keywords, :class => 'text-field' %><span>请用逗号分隔多个关键词</span>
    </li>
    <li>
      <label><span>*</span>案例及说明：</label><%= f.text_area :outline, :id => 'summary', :class => 'text-area', :onkeyup => 'countSummaryWord()' %><span id="summary-word-count-tip">当前已输入<%= @user.outline.blank? ? 0 : @user.outline.length %>个字符</span>
    </li>
  </ul>
</fieldset>
<div class="action-generic">
  <%= link_to '填写完毕，现在注册', '#', :onclick => "submitForm('new_user')", :class => 'button' %>
</div>
<% end %> 
<div class="cb"></div>