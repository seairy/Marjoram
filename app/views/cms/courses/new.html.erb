<div class="pageheader">
  <h2><i class="fa fa-pencil-square-o"></i> 球场管理 <span>创建</span></h2>
</div>
<div class="contentpanel">
  <%= render "cms/commons/error_messages", target: @course %>
  <div class="panel panel-dark">
    <div class="panel-heading">
      <h4 class="panel-title">球场信息</h4>
    </div>
    <div class="panel-body panel-body-nopadding">
      <%= form_for [:cms, @venue, @course], html: { class: 'form-horizontal form-bordered' } do |f| %>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'course.name' %></label>
          <div class="col-sm-6">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'course.holes_count' %></label>
          <div class="col-sm-6">
            <div class="rdio rdio-default">
              <%= radio_button_tag :holes_count, 9, checked: true %>
              <label for="holes_count_9"><%= brac_t 'course.9_holes' %></label>
            </div>
            <div class="rdio rdio-default">
              <%= radio_button_tag :holes_count, 18 %>
              <label for="holes_count_18"><%= brac_t 'course.18_holes' %></label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12 text-center">
            <%= f.submit '提交', class: 'btn btn-primary' %>&nbsp;
            <%= link_to '返回球会信息', [:cms, @venue], class: 'btn btn-default' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>