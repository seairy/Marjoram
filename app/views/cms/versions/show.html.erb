<div class="pageheader">
  <h2><i class="fa fa-file-text-o"></i> 版本管理 <span>查看</span></h2>
</div>
<div class="contentpanel">
  <%= brac_flash %>
  <div class="panel panel-dark">
    <div class="panel-heading">
      <h4 class="panel-title">版本信息</h4>
    </div>
    <div class="panel-body panel-body-nopadding">
      <%= form_tag nil, class: 'form-horizontal form-bordered' do %>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'version.code' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @version.code, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'version.name' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @version.name, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'version.file' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @version.file.url, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'version.description' %></label>
          <div class="col-sm-6">
            <%= text_area_tag :description, @version.description, readonly: true, rows: 8, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'version.state' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @version.state, readonly: true, class: 'form-control' %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="panel-footer">
      <%= link_to '返回版本列表', cms_versions_path, class: 'btn btn-default' %>&nbsp;
      <%= link_to '编辑', edit_cms_version_path(@version), class: 'btn btn-primary' %>&nbsp;
      <% if @version.pending? %>
      <%= link_to '发布', publish_cms_version_path(@version), method: :put, data: { confirm: '确定要发布吗？' }, class: 'btn btn-success' %>
      <% elsif @version.published? %>
      <%= link_to '取消发布', cancel_cms_version_path(@version), method: :put, data: { confirm: '确定要取消发布吗？' }, class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>