<div class="pageheader">
  <h2><i class="fa fa-list"></i> 文章管理 <span>列表</span></h2>
</div>
<div class="contentpanel">
  <%= brac_flash %>
  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table table-striped mb30">
          <thead>
            <tr>
              <th><%= brac_t 'post.title' %></th>
              <th><%= brac_t 'post.published_at' %></th>
              <th><%= brac_t 'post.visible' %></th>
              <th><%= brac_t 'post.featured' %></th>
              <th></th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <td colspan="5"><%= brac_paginate @posts %></td>
            </tr>
          </tfoot>
          <tbody>
            <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= brac_datetime post.published_at %></td>
              <td><%= brac_styled_boolean post.visible? %></td>
              <td><%= brac_styled_boolean post.featured? %></td>
              <td class="table-action">
                <%= link_to raw('<i class="fa fa-file-text-o"></i>'), [:cms, post] %>
                <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_cms_post_path(post) %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>