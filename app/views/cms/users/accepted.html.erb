<div class="pageheader">
  <h2><i class="fa fa-list"></i> 参会者管理 <span>已通过列表</span></h2>
</div>
<div class="contentpanel">
  <%= brac_flash %>
  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table table-striped mb30">
          <thead>
            <tr>
              <th><%= brac_t 'user.chinese_name' %></th>
              <th><%= brac_t 'user.gender' %></th>
              <th><%= brac_t 'user.file' %></th>
              <th><%= brac_t 'user.signed_up_at' %></th>
              <th></th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <td colspan="5"><%= brac_paginate @users %></td>
            </tr>
          </tfoot>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.chinese_name %></td>
              <td><%= gender_tag user.gender %></td>
              <td>
                <% if user.file.blank? %>
                <span class="label label-danger">未提交</span>
                <% else %>
                <span class="label label-success">已提交</span>
                <% end %>
              </td>
              <td><%= brac_datetime user.created_at %></td>
              <td class="table-action">
                <%= link_to raw('<i class="fa fa-file-text-o"></i>'), [:cms, user] %>
                <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_cms_user_path(user) %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>