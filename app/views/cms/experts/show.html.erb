<div class="pageheader">
  <h2><i class="fa fa-file-text-o"></i> 专家管理 <span>查看</span></h2>
</div>
<div class="contentpanel">
  <%= brac_flash %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">专家信息</h4>
    </div>
    <div class="panel-body panel-body-nopadding">
      <%= form_tag nil, class: 'form-horizontal form-bordered' do %>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'expert.name' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @expert.name, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'expert.group' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, (@expert.primary? ? 'A组' : 'B组'), readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'expert.unhandled_reviews_count' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @expert.reviews.unhandled.count, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'expert.handled_reviews_count' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @expert.reviews.handled.count, readonly: true, class: 'form-control' %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="panel-footer">
      <%= link_to '返回专家列表', cms_experts_path, class: 'btn btn-default' %>&nbsp;
    </div>
  </div>
  <div class="panel">
    <div class="panel-heading">
      <h4 class="panel-title">评审列表</h4>
    </div>
    <div class="table-responsive">
      <table class="table table-striped mb30">
        <thead>
          <tr>
            <th><%= brac_t 'user.chinese_name' %></th>
            <th><%= brac_t 'user.subject' %></th>
            <th><%= brac_t 'review.result' %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @expert.reviews.each do |review| %>
          <tr>
            <td><%= review.user.chinese_name %></td>
            <td><%= link_to review.user.subject, [:cms, review.user], target: '_blank' %></td>
            <td><%= te_review_result(review.result) %></td>
            <td class="table-action">
              <%= link_to raw('<i class="fa fa-file-text-o"></i>'), [:cms, review] %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>